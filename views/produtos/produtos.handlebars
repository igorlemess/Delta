{{>_navbar}}

<main class="d-flex flex-column container-fluid mt-5 p-5 fundo">
    {{#if error}}
    <div class="alert alert-danger">{{error}}</div>
    {{/if}}
    {{>_msg}}
    <span class="fs-2 troxo text-center">Gerencie seus anúncios</span>
    <span class="container p-0 mb-2"><a href="produtos/criarAnuncio"><button class="btn btn-lg tela float-end"><i class="bi bi-plus-lg"></i></button></a></span>

    <div class="container d-flex flex-column mb-3 bg-light rounded gerenciarAnuncio">

        {{#each produtos}}
                <div class="row border-bottom border-tertiary pb-2 m-2">
                    <div class="col-2">
                        <div class="border-tertiary border">
                            <img class="img-fluid" src="{{imagem1}}">
                        </div>
                    </div>
                    <div class="col-5 d-flex flex-column">
                        <p class="fs-4">Título: {{nomeProd}}</p>
                        <p class="fs-6">Código: {{id}}</p>
                        <p class="fs-5">{{formatarReais preco}}</p>
                    </div>
                    
                    <div class="col-4 d-flex justify-content-center align-items-center border-start border-tertiary justify-content-evenly flex-column flex-lg-row">
                        <div class="d-flex ">
                            <div class="d-flex justify-content-center align-items-center">
                                <a href="produtos/editarAnuncio?id={{id}}"><button class="btn btn-lg tela"><i class="bi bi-pencil-square"></i></button></a>
                            </div>
                        </div>
                        <form action="produtos/excluirAnuncio" method="POST" >
                                <input type="hidden" name="id" value="{{id}}">
                                <button class="tela btn btn-lg" type="submit"><i class="bi bi-trash3"></i></button></a>
                        </form>
                    </div>
                </div>
        {{else}}
                <h4>Nenhum produto registrado</h4>
        {{/each}}
    </div>
</main>
