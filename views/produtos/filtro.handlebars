{{>_navbar}}

<main class="filtro container-fluid d-flex justify-content-center align-items-center row m-0 mt-5 pt-5">
            <div class="container-fluid d-flex flex-column">
                {{#if pesquisa}}
                    <div class="container-fluid d-flex flex-column align-items-start col-md-7 col-lg-7 mt-2 bg-light rounded">
                        <b class=""><p class="fs-4">Resultados para: {{pesquisa}}</p></b>
                        <p>{{qtdep}} produtos encontrados</p>
                    </div>
                {{else}}
                    <div class="container-fluid d-flex flex-column align-items-start col-md-7 col-lg-7 mt-2 bg-light rounded">
                        <b class=""><p class="fs-4">Resultados para: {{categoria.categoria}}</p></b>
                        <p>{{qtde}} produtos encontrados</p>
                    </div>
                {{/if}}

    {{#each produtos}}
               <a href="/{{id}}"><div class="d-lg-none container-fluid d-flex flex-column align-items-center pt-5">
                        <div class="container-fluid">
                            <div class="row d-flex justify-content-center p-3">
                                <div class="img-div col-auto border border-secondary border-end-0 p-0">
                                    <img class="img-fluid" src="{{imagem1}}">
                                </div>
                                <div class="col-6  d-flex bg-light border border-secondary border-start-0  flex-column">
                                    <div class="fs-4">
                                        <p class="fw-bold mt-1 text-truncate">{{nomeProd}}</p>
                                        <p class="mt-1">R$ {{distanceFixed preco}}</p>
                                    </div>
                                    <p>{{distanceFixed (math produto.preco "/" 3)}}</p>
                                    <span class="d-inline-block text-truncate fs-5">
                                        <p >{{descricao}}
                                        </p>
                                    </span>
                                </div>
                            </div>
                        </div>
                </div></a>
    {{/each}}

{{#each produtos}}
                <a href="/{{id}}"><div class="d-none d-lg-block container-md d-flex flex-column">

                    <div class="container-fluid">
                        
                        <div class="row d-flex justify-content-center p-3">
                            <div class="img-div col-auto p-0 border border-secondary border-end-0 thumb">
                                <img class="img-fluid" src="{{imagem1}}">
                            </div>
                            <div class="col-6  d-flex bg-light border border-secondary border-start-0 flex-column">
                                <div class="fs-4">
                                    <p class="fw-bold mt-1">{{nomeProd}}</p>
                                    <p class="mt-1">R$ {{distanceFixed preco}}</p>
                                </div>
                                <p>3x R$ {{math preco "/" 3}}</p>
                                <span class="d-inline-block text-truncate fs-5 w-100">
                                    <p >{{descricao}}</p>
                                    
                                </span>
                            </div>
                        </div>

                    </div>
                </div></a>
{{/each}}

            </div>

</main>