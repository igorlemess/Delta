<main class="conteudo tela">
    {{#if error}}
    <div class="alert alert-danger">{{error}}</div>
    {{/if}}
    {{>_msg}}
    <div class="row login vh-100">
        <div class="EsquerdaLog col-5 d-sd-none d-flex justify-content-center align-items-center">
            <a href="/"><img class="img-fluid mx-auto d-block" src="/img/logo.png" width="50%"></a>
        </div>

        <form action="/usuario/login" method="POST"
            class="DireitaLog col container-fluid text-center d-flex flex-column align-items-center justify-content-center">
            <p class="fs-2 titulo">Login</p>

            <div class="w-50 fs-5 mb-2">
                <label>E-mail</label>
                <input type="text" name="Email" class="form-control form-control-lg">
            </div>

            <div class="w-50 fs-5 mb-3">
                <label>Senha</label>
                <input type="password" name="Senha" class="form-control form-control-lg">
                <p class="mt-3"><a href="/usuario/recsenha">Esqueceu sua senha?</a></p>
            </div>

            <button type="submit" class="btn btn-lg btn-f">Entrar</button>

            <div class="p-5 border-top border-bottom border-dark mb-5 mt-5">
                <a href="/usuario/cadastro" class="fs-3">
                    <p>Cadastrar-se</p>
                </a>
            </div>

            <p>Protegido pelo reCAPTCHA - <a href="/pdf/Delta Termos de uso.pdf" target="_blank">termos de uso</a> e <a
                    href="/pdf/Delta política de privacidade.pdf" target="_blank">política de privacidade</a></p>
        </form>
    </div>
</main>