{{>_navbar}}

<main class="inicial container-fluid p-2 fundo">


    <div class="container-fluid d-flex flex-column align-items-center mt-5 pt-5">



        <div class="container-fluid d-flex flex-column justify-content-center align-items-center">


            <div class="row col-lg-9 col-sd-12 bg-light container-sd p-3 shadow-sm mb-5">
                <div class="container-fluid mt-5">
                    <div class="row d-flex justify-content-center align-items-center p-3">
                        <div class="col-sd-12 col-md-auto col-lg-auto img-div">
                            {{#if usuario.imgPerfil}}
                            <img class="rounded-circle img-fluid" src="Images/{{usuario.imgPerfil}}"
                                style="width: 300px; height: 300px;">
                            {{else}}
                            <img class="rounded-circle img-fluid" src="/img/perfilsimg.png"
                                style="width: 300px; height: 300px;">
                            {{/if}}
                        </div>
                        <div class="col-sd-12 col-md-12 col-lg-6 d-flex bg-light flex-column">
                            <div class="fs-4">
                                <p class="fw-bold mt-1">{{usuario.Nome}}</p>
                                <p class="mt-1"> <img class="img-fluid" src="img/facebook.png">{{usuario.facebook}}</p>
                                <p class="mt-1"> <img class="img-fluid" src="img/instagram.png">{{usuario.instagram}}
                                </p>
                                <p class="mt-1"> <img class="img-fluid" src="img/site.png">{{usuario.site}}</p>
                                <p class="mt-1"> <img class="img-fluid" src="img/telefone.png">{{usuario.Telefone}}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>





            <b>
                <p class="fs-4 text-center tcinza">Produtos do vendedor</p>
            </b>

        </div>


            {{#grouped_each 3 produtos}}
            <div class="row d-flex justify-content-center rounded bg-light container- p-3 shadow-sm mb-5">
                {{#each this }}
                <a href="/{{id}}"
                    class="post col-12 col-sm-12 col-md-3 col-lg-3 col-xl-auto d-flex flex-column p-0 m-4">
                    <div class="thumb">
                        <img src="{{imagem1}}" class="img-fluid">
                    </div>
                    <div class="descricao p-1">
                        <p class="text-truncate">{{nomeProd}}</p>
                        <b>
                            <p>R$ {{distanceFixed preco}}</p>
                        </b>
                        <p>3x R$ {{math preco "/" 3}} sem juros</p>
                    </div>
                </a>
                {{/each}}
            </div>
            {{/grouped_each}}

    </div>
</main>

<style>
    .img-div {
        margin-left: -20px;
        /* Ajuste o valor conforme necess√°rio */
    }
</style>